@model IEnumerable<UserAndRolesDemo.Models.RoleViewModel>

<h3 class="text-center text-primary">
    Roles and associated users
</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>Role name</th>
        <th>Users</th>
    </tr>

    @foreach (var role in this.Model)
    {
        <tr>
            <td class="text-info">
                <h4>
                    @role.Name
                </h4>
            </td>
            <td>
                @if (role.UsersIn.Any())
                {
                    <span> @(role.UsersIn.FirstOrDefault()) </span>
                }
            </td>
        </tr>

        foreach (var user in role.UsersIn.Skip(1))
        {
            <tr>
                <td></td>
                <td>@user</td>
            </tr>
        }
    }

</table>

