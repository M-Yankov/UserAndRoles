@model IEnumerable<UserAndRolesDemo.Models.UserViewModel>


<h3 class="text-center text-primary">
    Users and their roles
</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>Username</th>
        <th>Roles</th>
    </tr>

    @foreach (var user in this.Model)
    {
        <tr >
            <td class="text-info">
                <h4>
                    @user.UserName
                </h4>
            </td>
            <td>
                @if (user.Roles.Any())
                {
                    <span> @(user.Roles.FirstOrDefault()) </span>
                }
            </td>
        </tr>

        foreach (var role in user.Roles.Skip(1))
        {
           <tr>
               <td></td>
               <td>@role</td>
           </tr>
        }
    }

</table>
